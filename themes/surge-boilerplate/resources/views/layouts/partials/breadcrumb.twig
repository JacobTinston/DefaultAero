{% if breadcrumb | length %}
    <div class="flex flex-wrap flex-col w-full max-w-3xl mx-auto px-4 pt-4">
        <ul class="list-reset pb-1 flex flex-wrap items-center">
            <li class="{% if breadcrumb | length != 1 %}hidden lg:{% endif %}inline-flex flex-wrap items-center mr-2">
                <svg class="fill-current w-2 h-2 mr-2 lg:hidden"
                     xmlns="http://www.w3.org/2000/svg" viewBox="0 0 255 255">
                    <polygon points="191.2,0 63.8,127.5 191.2,255 "/>
                </svg>
                <a href="/" class="inline-block max-w-32 lg:max-w-xs text-sm text-primary hover:text-primary-dark no-underline lg:hover:underline truncate">Home</a>
            </li>
            {% for i, crumb in breadcrumb %}
                <li class="{% if i != breadcrumb | length - 2 %}hidden lg:{% endif %}inline-flex flex-wrap items-center mr-2">
                    <svg class="fill-current w-2 h-2 mr-2"
                         xmlns="http://www.w3.org/2000/svg" viewBox="0 0 255 255">
                        <polygon points="191.2,0 63.8,127.5 191.2,255 "/>
                    </svg>
                    {% if loop.last %}
                        <span class="inline-block max-w-32 lg:max-w-xs text-sm text-primary truncate">{{ crumb.name }}</span>
                    {% else %}
                        <a href="{{ crumb.url }}" class="inline-block max-w-32 lg:max-w-xs text-sm text-primary hover:text-primary-dark no-underline lg:hover:underline truncate">{{ crumb.name }}</a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
{% endif %}
