<!DOCTYPE html>
<html lang="{{ locale() }}" class="bg-white antialiased h-full no-js">
<head>
    <title>{{ page_title() }}</title>
    {% block meta %}{% include "layouts.partials.meta" %}{% endblock %}
    <link rel="dns-prefetch" href="{{ asset('') }}">
    <script>document.documentElement.className=document.documentElement.className.replace('no-js','js')</script>
    {{ theme_css('css/main.css') }}
</head>
<body class="font-sans font-normal leading-tight text-black min-h-full">
<div class="min-h-screen w-full flex flex-col justify-between lg:overflow-visible bg-grey-lighter">
    {% block main %}
        {% block header %}{% include "layouts.header" %}{% endblock %}
        {% include "layouts.partials.breadcrumb" with {breadcrumb: breadcrumb()} %}
        <div id="content" class="flex flex-grow flex-no-shrink justify-center">
            {% content %}
        </div>
        {% block footer %}{% include "layouts.footer" %}{% endblock %}
    {% endblock %}
</div>
<script src="{{ theme_asset('js/jquery.slim.min.js') }}"></script>
<script src="{{ asset(theme_mix('js/main.js')) }}" defer></script>
<script src="{{ theme_asset('js/lazysizes.min.js') }}" defer></script>
</body>
</html>
