{% layout "main" %}

<div class="w-full max-w-3xl mx-auto p-4 pt-0 pb-8">
    {% set hero_main = block_items('homepage.default-theme.main-hero') %}
    {% if hero_main | length %}
        <div class="{% if hero_main | length > 1 %}glide {% endif %}glide-carousel mt-4 pb-2 lg:pb-0">
            <div data-glide-el="track"
                 class="glide__track rounded-lg shadow-lg w-full lg:shadow-none overflow-hidden whitespace-no-wrap rounded-fix">
            <ul class="glide__slides">
                    {% for block in hero_main %}
                        <li class="glide__slide w-full inline-block">
                            {{ block | raw }}
                        </li>
                    {% endfor %}
                </ul>
                {% if hero_main | length > 1 %}
                    <div class="glide__bullets" data-glide-el="controls[nav]">
                        {% for index, block in hero_main %}
                            <button class="glide__bullet" data-glide-dir="={{ index }}"></button>
                        {% endfor %}
                    </div>
                    <div class="glide__arrows" data-glide-el="controls">
                        <button class="glide__arrow glide__arrow--left" data-glide-dir="<">◀</button>
                        <button class="glide__arrow glide__arrow--right" data-glide-dir=">">▶</button>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}
    {% if block_exists('homepage.default-theme.sub-heroes') %}
        <div class="flex w-full flex-wrap mt-4 mb-2 lg:mb-0">
            <div class="w-full lg:w-1/2 rounded-lg mt-6 lg:mt-0 lg:rounded-none lg:rounded-l-lg shadow-lg lg:shadow-none overflow-hidden">
                {{ block_item('homepage.default-theme.sub-heroes') }}
            </div>
            <div class="w-full lg:w-1/2 rounded-lg mt-6 lg:mt-0 lg:rounded-none lg:rounded-r-lg shadow-lg lg:shadow-none overflow-hidden">
                {{ block_item('homepage.default-theme.sub-heroes', 1) }}
            </div>
        </div>
    {% endif %}
    <div class="flex w-full flex-wrap mt-4">
        <div class="relative rounded-lg shadow-lg lg:shadow-none w-full overflow-hidden p-6 bg-white border border-grey-light">
            <h1 class="w-full text-xl text-center mb-2 text-primary">{{ page.heading }}</h1>
            <div class="text-center lg:text-justify leading-normal">{{ page.content | raw }}</div>
        </div>
    </div>
</div>
